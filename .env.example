# SEEK Job Crawler Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=SEEK Job Crawler
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_PATH=data/processed/crawler.db
DATABASE_URL=sqlite:///data/processed/crawler.db

# Proxy Settings
PROXY_ENABLED=true
PROXY_ROTATION_ENABLED=true
PROXY_TEST_TIMEOUT=10
PROXY_MAX_RETRIES=3
PROXY_RETRY_DELAY=2
PROXY_POOL_SIZE=50
PROXY_VALIDATION_INTERVAL=300

# Crawler Settings
CRAWLER_DELAY_MIN=1
CRAWLER_DELAY_MAX=3
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_USER_AGENT_ROTATION=true
CRAWLER_MAX_CONCURRENT_REQUESTS=5

# SEEK Website Settings
SEEK_BASE_URL=https://www.seek.com.au
SEEK_SEARCH_URL=https://www.seek.com.au/jobs
SEEK_MAX_PAGES=10
SEEK_JOBS_PER_PAGE=20

# Logging Configuration
LOG_FILE_PATH=data/logs/crawler.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST_SIZE=5

# Error Handling
ERROR_MAX_RETRY_ATTEMPTS=3
ERROR_RETRY_BACKOFF_FACTOR=2
ERROR_NOTIFICATION_ENABLED=false

# Output Settings
OUTPUT_CSV_ENABLED=true
OUTPUT_JSON_ENABLED=true
OUTPUT_EXCEL_ENABLED=false
OUTPUT_DIRECTORY=data/processed

# Email Notifications (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Redis Configuration (Optional - for distributed crawling)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Settings (for web interface)
API_HOST=127.0.0.1
API_PORT=5000
API_DEBUG=true

# Security Settings
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ENABLED=true
CORS_ORIGINS=*

# Performance Settings
MEMORY_LIMIT_MB=512
CPU_LIMIT_PERCENT=80
TIMEOUT_SECONDS=300

# Testing Settings
TEST_MODE=false
TEST_PROXY_COUNT=10
TEST_JOB_COUNT=5